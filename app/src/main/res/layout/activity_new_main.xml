<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewMainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/signupbg" />

    <TextView
        android:id="@+id/appNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Welcome back"
        android:textSize="60sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/editTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/searchRecipeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:labelFor="@id/editTextPersonName"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:ignore="SpeakableTextPresentCheck" />
    <Button
        android:id="@+id/searchRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/savedRecipeButton"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="-25dp"
        android:width="250dp"
        android:background="@drawable/button_custom2"
        android:padding="15dp"
        android:text="Search Recipes"
        android:textColor="@color/colorTextIcons"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/savedRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:width="250dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_custom2"
        android:padding="15dp"
        android:text="Saved Recipes"
        android:textColor="@color/colorTextIcons"
        android:textSize="25sp"
        android:textStyle="bold" />

</RelativeLayout>